<div class='card z-depth-4 block'>
  <div class='card-content project'>
    <%= render partial: "portfolios/shared/block_header", locals: {title: 'PROJETOS'} %>
    <div class='row history'>
      <div class="col m10 offset-m1 s10 offset-s1">
        <% portfolio.projects.each_with_index do |project, i| %>
          <div class='row zero-bottom-space'>
            <div class="col m8 offset-m1">
              <div class="row custom-space">
                <p class="professional_title custom-grey-text text-darken-1">
                  <%= project.title %>
                </p>
              </div>
              <div class="row">
                <p class="professional_description custom-grey-text">
                  <a href="<%= project.url %>" target="_blank"><%= project.url %></a>
                </p>
              </div>
            </div>
          </div>
          <div class='row'>
            <% if portfolio.projects.count != i + 1 %>
              <hr class='divider'>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>